# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space

insert_final_newline = true
trim_trailing_whitespace = true
ij_typescript_use_double_quotes = false
ij_scss_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
